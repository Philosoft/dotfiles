#include <stdio.h>

int main()
{
	int first_angle, second_angle;

	printf("Введите первый угол: ");
	scanf("%i", &first_angle);
	if(first_angle > 0)
	{
		printf("Введите второй угол: ");
		scanf("%i", &second_angle);
		if(second_angle > 0)
		{
			if(first_angle + second_angle < 180)
			{
				printf("Треугольник существует и он ");
				if(first_angle == 90 || second_angle == 90 || (first_angle == 45 && second_angle == 45))
					printf("прямоугольный\n");
				else
					printf("не прямоугольный\n");
			}
		}
		else
			printf("Треугольник не существует\n");
	}
	else
		printf("Треугольник не существует\n");

	return 0;
}
