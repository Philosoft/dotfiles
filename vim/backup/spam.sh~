#!/bin/bash

cout=0
text="Мяу\nХрю-хрю\nЧирик-чирик\nКу-ку\nУ-у-у\nКаааааааааррррррррр\nГав-гав"

while true
do
  `sleep 600`
  status=`gajim-remote send_groupchat_message welinux@conference.jabber.ru "$(echo -e $text | shuf | head -n 1)"`
  if [ $status -eq 1 ]; then
    let "count += 1"
    echo "$count сообщений отправлено";
  else
    echo "Ни хера"
  fi
done
