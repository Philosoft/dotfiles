#include <stdio.h>

int main()
{
	int n, k;
	printf("Введите трёхзначное число (N): ");
	scanf("%i", &n);
	if(n > 99 && n < 1000)
	{
		printf("Введите K: ");
		scanf("%i", &k);
		int first = n / 100;
		int second = (n - first*100) / 10 ;
		int third = n - first*100 - second*10;
		printf("  :: [debug] %i%i%i\n", first, second, third); //FIXME
		if(first < 5)
			printf("Первая цифра меньше 5 (%i < 5)\n", first);
		else
			printf("Первая цифра больше 5 (%i > 5)\n", first);

		if(second + third < k)
			printf("Сумма двух последних меньше K ( %i + %i < %i )\n", second, third, k);
		else
			printf("Сумма двух последних больше K ( %i + %i > %i )\n", second, third, k);
	}
	else
	{
		printf("Бяка, трёхзначное надо было! :(\n");
	}

	return 0;
}
