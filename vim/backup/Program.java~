import java.awt.*;
import java.util.*;
import java.applet.*;
import java.awt.event.*;
import javax.swing.*;

public class Program extends Applet
{

	JButton Register, Generate, Enter;
	
	JLabel Strings, Columns, Second, Please;
	
	JTextField toStrings, toColumns, toNumber, forInfo;
	JTextArea toArray, toResult;

  JScrollPane jsp;

	int numstrings = 0, numcolumns = 0;
	
	int ArrayOfNum [][];
	
	class CheckData
	{
		public void Check()
		{
			int i, j;
		
			if(toStrings.getText() == "" || toColumns.getText() == "")
				forInfo.setText("Нуту данных ☹");

			numstrings = Integer.parseInt(toStrings.getText());
			numcolumns = Integer.parseInt(toColumns.getText());			
		}
	}
	
	class FindElements implements ActionListener
	{
		public void actionPerformed(ActionEvent ae)
		{
			int i, j, number, after;
			Random rand;
			
			if(numstrings == 0 || numcolumns == 0)
			{
				forInfo.setText("Нету данных");
			}
			else
			{
				toResult.setText("");
				
				number = Integer.parseInt(toNumber.getText());
								
				for(i = 0; i < numstrings; i++)
					for(j = 0; j < numcolumns; j++)
						if(ArrayOfNum[i][j] > 0)
							if((i + j + 2) > number)
							{
								toResult.append("Array(" + Integer.toString(i + 1) + "," + Integer.toString(j + 1) + "): ");
								toResult.append(Integer.toString(ArrayOfNum[i][j]) + " [i + j = " + Integer.toString(i + j + 2) + "];\n");
							}
			}
		}
	}
	
	class GenerateArray implements ActionListener
	{
		public void actionPerformed(ActionEvent ae)
		{
			int i, j, number, after;
			Random rand;
      CheckData ololo = new CheckData();
      ololo.Check();
			
			if(numstrings == 0 || numcolumns == 0)
			{
				forInfo.setText("Нету данных ☹");
			}
			else
			{
				toArray.setText("");
				
				ArrayOfNum = new int[numstrings][numcolumns];
			
				rand = new Random();
			
				for(i = 0; i < numstrings; i++)
				{
					for(j = 0; j < numcolumns; j++)
					{
						ArrayOfNum[i][j] = rand.nextInt() % 50;
					}
				}
				for(i = 0; i < numstrings; i++)
				{
					for(j = 0; j < numcolumns; j++)
					{
						toArray.append(Integer.toString(ArrayOfNum[i][j]) + "\t");
						if(j == numcolumns - 1)
							toArray.append("\n");
					}
				}
			}
		}
	}
	
	public void init()
	{
		setLayout(null);
		
		Strings = new JLabel("Строк:");
		Strings.setBounds(0, 25, 200, 20);
		add(Strings);

		toStrings = new JTextField("");
		toStrings.setBounds(205, 25, 50, 20);
		add(toStrings);

		Columns = new JLabel("Стобцов:");
		Columns.setBounds(0, 50, 200, 20);
		add(Columns);

		toColumns = new JTextField("");
		toColumns.setBounds(205, 50, 50, 20);
		add(toColumns);
    /*
		Register = new JButton("Считать данные");
		Register.setBounds(0, 75, 150, 20);
		add(Register);
		Register.addActionListener(new RegisterArray());
		*/
		toArray = new JTextArea("");
		toArray.setBounds(0, 100, 400, 150);
  	add(toArray);

		Generate = new JButton("Забабахать массив");
		Generate.setBounds(0, 255, 250, 20);
		add(Generate);
		Generate.addActionListener(new GenerateArray());
		
		Second = new JLabel("Чеселко:");
		Second.setBounds(0, 280, 200, 20);
		add(Second);
		
		toNumber = new JTextField("");
		toNumber.setBounds(205, 280, 50, 20);
		add(toNumber);
		
		Please = new JLabel("Результаты:");
		Please.setBounds(0, 305, 200, 20);
		add(Please);
		
		toResult = new JTextArea("");
		toResult.setBounds(0, 330, 400, 150);
		add(toResult);
		
		Enter = new JButton("Выдать на гора");
		Enter.setBounds(0, 485, 250, 20);
		add(Enter);
		Enter.addActionListener(new FindElements());
		
		forInfo = new JTextField("");
		forInfo.setBounds(0, 520, 200, 20);
		add(forInfo);
	}
}
