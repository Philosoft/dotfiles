import java.io.*;
import javax.servlet.*;

public class serv extends GenericServlet
{
	public void service(ServletRequest req, ServletResponse resp)
	throws ServletException, IOException
	{
		resp.setContentType("text/html");
		resp.setCharacterEncoding("utf-8");
		PrintWriter pw = resp.getWriter();

		int[][] matrix_a;
		int[][] matrix_b;
		matrix_a = new int[4][4];
		matrix_b = new int[4][4];

		for(int i = 0; i < 4; i++)
			for(int j = 0; j < 4; j++)
				matrix_a[i][j] = integer.parseint(req.getparameter("a" + i + j);

		for(int i = 0; i < 4; i++)
			for(int j = 0; j < 4; j++)
				matrix_a[i][j] = integer.parseint(req.getparameter("b" + i + j);

		double[][] matrix_c;
		matrix_c = new double[4][4];
		for(int i = 0; i < 4; i++)
		{
			int tmp = 0;
			for(int j = 0; j < 4; j++)
			{
				double sum = 0.0;
				for(int k = 0; k < 4; k++)
				{
					sum += matrix_a[i][k] * matrix_b[k][i];
				}
				matrix_c[i][j] = sum;
			}
		}

		pw.println("<!DOCTYPE hmtl>");
		pw.println("<hmtl>");
		pw.println("  <head>");
		pw.println("    <meta charset=utf-8>");
		pw.println("    <title>Лабораторная работа №7</title>");
		pw.println("  </head>");
		pw.println("  <body>");
		pw.println("    <table border=1>");
		for(int i = 0; i < 4; i++)
		{
			pw.println("      <tr>");
			for(int j = 0; j < 4; j++)
			{
				pw.print("          <td>C<sub>");
				pw.print(i);
				pw.print(j);
				pw.print("</sub></td><td>");
				pw.print(matrix_c[i][j]);
				pw.println("</td>");
			}
			pw.println("      </tr>");
		}
		pw.println("    <table>");
		pw.println("  </body>");
		pw.println("</html>");
		pw.close();

		File f = new File("test.txt");
		FileWriter fw = new FileWriter(f);
		fw.write("string");
		fw.flush();
		fw.close();

		FileReader fr = new FileReader(f);
		fr.read();
		fr.close();
	}
}
