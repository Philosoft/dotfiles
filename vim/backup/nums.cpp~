#include <iostream>
#include <string>
#include <sstream>

#include <stdlib.h>

using namespace std;

int main(int argc, char** argv)
{
	int a = -1, b = -1;
	int fail_counter = -1;
	stringstream buf;
	string str_a, str_b;

	while( (fail_counter < 3) &&  (a < 0 || a > 9999 ) )
	{
		cout<<"Введите 1е число: ";
		fail_counter++;
		cin>>a;
	}
	if(fail_counter == 3)
	{
		cout<<"Нет, ну сколько можно? Я умываю руки!\n";
		exit(EXIT_FAILURE);
	}

	fail_counter = -1;

	while( (fail_counter < 3) && (b < 0 || b > 9999))
	{
		cout<<"Введите 2е число: ";
		fail_counter++;
		cin>>b;
	}
	if(fail_counter == 3)
	{
		cout<<"Нет, ну сколько можно? Я умываю руки!\n";
		exit(EXIT_FAILURE);
	}

	buf<<a;
	str_a = buf.str();
	buf<<b;
	str_b = buf.str();
	cout<<"a = "<<a<<endl<<"b = "<<b<<endl;
	
	exit(EXIT_SUCCESS);
}
