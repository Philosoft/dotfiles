#!/usr/bin/python3

import os
import sys
from optparse import OptionParser

parser = OptionParser()
parser.add_option("-s", "--string", dest="target", help="строка которую нужно перевести", metavar="STR")
parser.add_option("-d", "--direction", dest="direction", help="1 - en -> ru\n2 - ru - en", metavar="D", type="int")

(opt, args) = parser.parse_args()

if opt.target is None:
    print("Нечего переводить")
    sys.exit(0)

if opt.direction is None:
    opt.direction = 2

en = '`1234567890-=\qwertyuiop[]asdfghjkl;\'zxcvbnm,./~!@#$%^&*()_+|QWERTYUIOP{}ASDFGHJKL:"ZXCVBNM<>?'
ru = 'ё1234567890-=\йцукенгшщзхъфывапролджэячсмитьб0ю.Ё!"№;%:?*()_+/ЙЦУКЕНГШЩЗХЪФЫВАПРОЛДЖЭЯЧСМИТЬБЮ,'

res = ''
target = opt.target

if opt.direction == 1:
    for i in target:
        place = 0
        for j in ru:
            if j == i:
                res += en[place]
            place += 1
else:
    for i in target:
        place = 0
        for j in en:
            if j == i:
                res += ru[place]
            place += 1

print(res)
