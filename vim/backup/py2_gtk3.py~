#!/usr/bin/python
# -*-  coding: utf-8 -*-

from gi.repository import Gtk

class App(Gtk.Builder):
    '''Класс для гуйни'''
    def __init__(self):
        super(App, self).__init__()
        self.add_from_file('gtk3_gui.ui')
        self.connect_signals(self)
        self.window1.connect('destroy', Gtk.main_quit)

        self.window1.show_all()
        Gtk.main()

    def __getattr__(self, attr):
        '''чтобы проще обращаться к элементам формочки'''
        obj = self.get_object(attr)
        if not obj:
            raise AttributeError('There are no such attr as `' + attr + '\'')
        setattr(self, attr, obj)
        return obj

App()
