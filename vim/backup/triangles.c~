#include <stdio.h>
#include <math.h>

int main()
{
	int x1, x2, x3, y1, y2, y3;
	int sqare;

	printf("Введите координаты точки A (через пробел): ");
	scnaf("%i %i", &x1, &y1);
	printf("Введите координаты точки B (через пробел): ");
	scnaf("%i %i", &x2, &y2);
	printf("Введите координаты точки C (через пробел): ");
	scnaf("%i %i", &x3, &y3);

	sqare = abs(((x1 - x3) * (y2 - y3) - (x2 - x3) * (y1 - y3)) / 2);
	if(sqare == 0)
		printf("Точки A, B и C лежат на одной прямой\n");
	else
		printf("Площадь треугольника ABC: %i\n", sqare);

	return 0;
}
