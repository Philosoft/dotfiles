#!/bin/bash

ACTION=$(zenity --width=90 --height=300 --list --radiolist --text="Select logout action" --title="Logout" --column "Choice" --column "Action" TRUE Shutdown FALSE Reboot FALSE LockScreen FALSE Sleep FALSE Hibernate)

if [[ -n "${ACTION}" ]];then
  case $ACTION in
    Shutdown)
        sudo shutdown -h now
        ;;
    Reboot)
        sudo shutdown -r now
        ;;
    LockScreen)
        slock
        ;;
    Sleep)
        sudo pm-suspend
        ;;
    Hibernate)
        sudo pm-hibernate
        ;;
  esac
fi
