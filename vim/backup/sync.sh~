#!/bin/bash 

# Sync my local configs with git

##########
# Config #
##########
repo='/home/philosoft/Philosoft-s-configs/'
configs_dirs='/home/philosoft/.vim/ /home/philosoft/.config/awesome/'
configs_files="/home/philosoft/{.bashrc,.bash_aliases,.XCompose,.xinirc,.Xdefaults,.gtkrc-2.0,.inputrc,.mpd.conf,.vimrc,.xxkbrc}"

###########
# Actions #
###########
last_dir=`pwd`
cd "$repo"

# Copy dirs
cp $configs_dirs ./ -R
cp $configs_files ./
