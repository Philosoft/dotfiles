#!/bin/bash 

if [ -x /usr/bin/gajim-remote ]; then
  while true; do
    isrun=`gajim-remote check_gajim_running`;
    if [ $isrun = "True" ]; then
      curstat=`gajim-remote get_status`
      curstatmsg=`gajim-remote get_status_message`;
      tune=`mpc | head -n 1`;
      newstat=`echo -e "$curstatmsg\n[tune]\n$tune"`;
      gajim-remote change_status  "$curstat" "$newstat"
    else
      exit 1
    fi
    sleep 40;
  done
else
  echo "gajim-remote does NOT exist or does NOT executable file"
fi
