#!/usr/bin/env python
#*-* coding: utf8 *-*

import pygtk
pygtk.require('2.0')
import gtk

class test:
    def __init__(self):
        w = gtk.Window(gtk.WINDOW_TOPLEVEL)
        w.connect('destroy', lambda w: gtk.main_quit())

        self.da = gtk.DrawingArea()
        self.da .set_size_request(400, 300)
        w.add(self.da)
        self.da.set_events(gtk.gdk.POINTER_MOTION_MASK |
                           gtk.gdk.POINTER_MOTION_HINT_MASK)
        self.da. connect('expose-event', self.expose)
        self.da.show()
        w.show()

    def expose(self, da, event):
        self.style = self.area.get_style()
        self.gc = self.style.fg_gc[gtk.STATE_NORMAL]
        self.da.window.draw_point(self.gc, 100, 100)
        x = 110
        y = 10
        points = [(x+10,y+10), (x+10,y), (x+40,y+30),
                  (x+30,y+10), (x+50,y+10)]
        self.da.window.draw_points(self.gc, points)
        return True

def main():
    gtk.main()
    return 0

if __name__ == '__main__':
    t = test()
    main()
