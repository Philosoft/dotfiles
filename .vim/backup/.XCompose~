include "/usr/share/X11/locale/en_US.UTF-8/Compose"

! Как записывать русские символы можно посмотреть в /usr/share/X11/xkb/symbols/ru 

!! Find their names using `xev` output
! KEY-RESULT	   KEYNAME
! `						  <grave>
! '						 	<apostrophe>
! "						 	<quotedbl>
! ~						 	<asciitilde>
! ! 					 	<exclam>
! ?	  				 	<question>
! @		  			 	<at>
! #			  		 	<numbersign>
! $				  	 	<dollar>
! %					   	<percent>
! ^						 	<asciicircum>
! &						 	<ampersand>
! *						 	<asterisk>
! (						 	<parenleft>
! )						 	<parenright>
! [	  				 	<bracketleft>
! ]		  			 	<bracketright>
! {			  		 	<braceleft>
! }				  	 	<braceright>
! -					   	<minus>
! +						 	<plus>
! =						 	<equal>
! _						 	<underscore>
! <						 	<less>
! >					    <greater>
! \					    <backslash>
! /						  <slash>
! |						 	<bar>
! ,						 	<comma>
! .						 	<period>
! :						 	<colon>
! ;						 	<semicolon>
! a-z,A-Z,0-9	 	<a>-<z>,<A>-<Z>,<0>-<9>
! NumPad 0-9	 	<KP_0>-<KP_9>
! NumPad +		 	<KP_Add>
! NumPad -		 	<KP_Subtract>
! NumPad *		 	<KP_Multiply>
! NumPad /		 	<KP_Divide>
! NumPad .		 	<KP_Decimal>

!##########
! Кавычки #
!##########

! «Ёлочки»
! В английской раскладке это:
! compose + < + < и compose + > + > соответственно
<Multi_key> <Cyrillic_be>       : "«"   guillemotleft  
<Multi_key> <Cyrillic_yu>       : "»"   guillemotright

! „Лапки“
! В английской раскладке это:
! compose + , + " и compose + < + " соответственно для „ и “
<Multi_key> <Cyrillic_BE>       : "„"   U201e
<Multi_key> <Cyrillic_YU>       : "“"   U201c

!########################
! Различная типографика #
!########################

<Multi_key> <space>                                   : " "   nobreakspace 
<Multi_key> <Cyrillic_ve>                             : "…"   ellipsis
<Multi_key> <apostrophe> <apostrophe> <apostrophe> 	  : "́"    U0301      # ударение в английской раскладке
<Multi_key> <Cyrillic_io>                             : "́"    U0301      # ударение в русской раскладке

!#################
! Товарные знаки #
!#################

<Multi_key> <Cyrillic_es>       : "©"   copyright    
<Multi_key> <c>                 : "©"   copyright   
<Multi_key> <Cyrillic_ka>       : "®"   registered 
<Multi_key> <r>                 : "®"   registered
<Multi_key> <Cyrillic_ie>       : "™"   U2122    
<Multi_key> <t> <m>             : "™"   U2122   

!#########################
! Математические символы #
!#########################

! знак ≠ (неравно)    набирается как compose + / + =
! знак ± (плюс-минус) набирается как compose + + + -
<Multi_key> <Cyrillic_ef>       : "≈"   approximate  # Приблизительно равно


!####################################
! Удобный набор в русской раскладке # 
!####################################

<Multi_key> <3> <3>             : "#"   numbersign   
<Multi_key> <4> <4>             : "$"   dollar      
<Multi_key> <Cyrillic_ha>       : "["   bracketleft
<Multi_key> <Cyrillic_hardsign> : "]"   bracketright
<Multi_key> <Cyrillic_e>        : "'"   
<Multi_key> <Cyrillic_E>        : "\""

!####################
! Смайлики и прочее #
!####################

<Multi_key> <0>                 : "☺" U263A # :)
<Multi_key> <9>                 : "☹" U2639 # :(
<Multi_key> <Cyrillic_ze> <1>   : "★" U2605 # закрашенная звезда
<Multi_key> <Cyrillic_ze> <0>   : "☆" U2606 # незакрашенная звезда
<Multi_key> <Cyrillic_en>       : "♫" U266B # нотки

!############
! Стрелочки #
!############

<Multi_key> <minus> <Right> <Right>					 : "→"
<Multi_key> <minus> <Left> <Left>						 : "←"
<Multi_key> <minus> <Up> <Up>							   : "↑"
<Multi_key> <minus> <Down> <Down>						 : "↓"

<Multi_key> <minus> <Left> <Right>					 : "↔"
<Multi_key> <minus> <Up> <Down>							 : "↕"

<Multi_key> <minus> <slash> <Left> <Left>		 : "↚"
<Multi_key> <minus> <slash> <Right> <Right>	 : "↛"
<Multi_key> <minus> <slash> <Left> <Right>	 : "↮"

<Multi_key> <minus> <Left> <Up>							 : "↖"
<Multi_key> <minus> <Left> <Down>						 : "↙"
<Multi_key> <minus> <Up> <Right>						 : "↗"
<Multi_key> <minus> <Down> <Right>					 : "↘"

<Multi_key> <equal> <Right> <Right>					 : "⇒"
<Multi_key> <equal> <Left> <Left>		  			 : "⇐"
<Multi_key> <equal> <Up> <Up>					    	 : "⇑"
<Multi_key> <equal> <Down> <Down>					   : "⇓"

<Multi_key> <equal> <Left> <Right>					 : "⇔"
<Multi_key> <equal> <Up> <Down>							 : "⇕"

<Multi_key> <equal> <slash> <Left> <Left>		 : "⇍"
<Multi_key> <equal> <slash> <Right> <Right>	 : "⇏"
<Multi_key> <equal> <slash> <Left> <Right>	 : "⇎"

<Multi_key> <equal> <Left> <Up>							 : "⇖"
<Multi_key> <equal> <Left> <Down>						 : "⇙"
<Multi_key> <equal> <Up> <Right>						 : "⇗"
<Multi_key> <equal> <Down> <Right>					 : "⇘"

!####################
! Греческий алфавит #
!####################
! Для мнемоники: *G*reek
<Multi_key> <g> <a>	 : "α"	# альфа
<Multi_key> <g> <b>	 : "β"	# бета
<Multi_key> <g> <g>	 : "γ"	# гамма
<Multi_key> <g> <d>	 : "δ"	# дельта
<Multi_key> <g> <e>	 : "ε"	# эпсилон
<Multi_key> <g> <z>	 : "ζ"	# зета
<Multi_key> <g> <h>	 : "η"	# эта
<Multi_key> <g> <q>	 : "θ"	# тета
<Multi_key> <g> <i>	 : "ι"	# йота
<Multi_key> <g> <k>	 : "κ"	# каппа
<Multi_key> <g> <l>	 : "λ"	# лямбда
<Multi_key> <g> <m>	 : "μ"	# мю
<Multi_key> <g> <n>	 : "ν"	# ню
<Multi_key> <g> <x>	 : "ξ"	# кси
<Multi_key> <g> <o>	 : "ο"	# омикрон
<Multi_key> <g> <p>	 : "π"	# пи
<Multi_key> <g> <v>	 : "ϖ"	# GREEK PI SYMBOL
<Multi_key> <g> <r>	 : "ρ"	# ро
! <Multi_key> <g> <>	 : "ς"	# GREEK SMALL LETTER FINAL SIGMA
<Multi_key> <g> <s>	 : "σ"	# сигма
<Multi_key> <g> <t>	 : "τ"	# тау
<Multi_key> <g> <u>	 : "υ"	# UPSILON
<Multi_key> <g> <f>	 : "φ"	# фи
<Multi_key> <g> <j>	 : "ϕ"	# PHI SYMBOL
<Multi_key> <g> <c>	 : "χ"	# хи
<Multi_key> <g> <y>	 : "ψ"	# пси
<Multi_key> <g> <w>	 : "ω"	# омега

<Multi_key> <G> <A>	 : "Α"	# альфа                          
<Multi_key> <G> <B>	 : "Β"	# бета                           
<Multi_key> <G> <G>	 : "Γ"	# гамма                          
<Multi_key> <G> <D>	 : "Δ"	# дельта                         
<Multi_key> <G> <E>	 : "Ε"	# эпсилон                        
<Multi_key> <G> <Z>	 : "Ζ"	# зета                           
<Multi_key> <G> <H>	 : "Η"	# эта                            
<Multi_key> <G> <Q>	 : "Θ"	# тета                           
<Multi_key> <G> <I>	 : "Ι"	# йота                           
<Multi_key> <G> <K>	 : "Κ"	# каппа                          
<Multi_key> <G> <L>	 : "Λ"	# лямбда                         
<Multi_key> <G> <M>	 : "Μ"	# мю                             
<Multi_key> <G> <N>	 : "Ν"	# ню                             
<Multi_key> <G> <X>	 : "Ξ"	# кси                            
<Multi_key> <G> <O>	 : "Ο"	# омикрон                        
<Multi_key> <G> <P>	 : "Π"	# пи                             
<Multi_key> <G> <V>	 : "Π"	# PI SYMBOL
<Multi_key> <G> <R>	 : "Ρ"	# ро         
! <Multi_key> <G> <>	 : "Σ"	# GREEK SMALL LETTER FINAL SIGMA 
<Multi_key> <G> <S>	 : "Σ"	# сигма                          
<Multi_key> <G> <T>	 : "Τ"	# тау                            
<Multi_key> <G> <U>	 : "Υ"	# UPSILON     
<Multi_key> <G> <F>	 : "Φ"	# фи                             
<Multi_key> <G> <J>	 : "Φ"	# PHI SYMBOL         
<Multi_key> <G> <C>	 : "Χ"	# хи                             
<Multi_key> <G> <Y>	 : "Ψ"	# пси                            
<Multi_key> <G> <W>	 : "Ω"	# омега                          
