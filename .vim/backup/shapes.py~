#! /usr/bin/env python
import framework
from math import pi

class Shapes(framework.Screen):
    def draw(self, cr, width, height):
        # draw lines
        cr.set_source_rgb(0.0, 0.0, 0.8)
        cr.set_line_width(40)
        cr.move_to(100, 100)
        cr.line_to(101, 101)
        cr.stroke()

framework.run(Shapes)
