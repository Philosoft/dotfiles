/*
 * @file: character.h
 * @version: 0.1
 * @author: Philosoft
 * @synopsis: character class 
 * @decription:
*/

#ifndef CHARACTER_H
#define CHARACTER_H

/*
 * @class: character
 * @public:
 *  @atribs: unsigned int side: 0 - dark; 1 - light
 *           unsigned int lvl: level - 7 - 0
*/
class character
{
  private:
    unsigned int side;    
    unsigned int lvl;
    unsigned int sub_lvl;
    unsigned long int exp;
  public:
    //Get-methods
    unsigned int get_side();
    unsigned int get_lvl();
    unsigned int get_sub_lvl();
    unsigned long int get_exp();

    //Set-methods
    void set_side(unsigned int);
    void set_lvl(unsigned int);
    void set_sub_lvl(unsigned int);
    void set_exp(unsigned long int);

    void up_lvl(unsigned int);
    void up_sub_lvl(unsigned int);
    void up_exp(unsigned long int);
};

#endif
